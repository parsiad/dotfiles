gaps inner 20

# i3 gaps has issues playing nicely with feh.
for_window [class=".*"] border pixel 5
hide_edge_borders both

smart_gaps on

for_window [instance="vit"] floating enable
for_window [instance="vit"] resize set 1280 720
for_window [instance="vit"] move scratchpad
for_window [instance="vit"] border pixel 5
exec --no-startup-id alacritty --class vit,vit --option font.size=12 -e vit

for_window [instance="ipython"] floating enable
for_window [instance="ipython"] resize set 1280 720
for_window [instance="ipython"] move scratchpad
for_window [instance="ipython"] border pixel 5
exec --no-startup-id alacritty --class ipython,ipython --option font.size=14 -e ipython

