bindsym $mod+$alt+Left exec $HOME/bin/move-into left
bindsym $mod+$alt+Right exec $HOME/bin/move-into right
bindsym $mod+$alt+Up exec $HOME/bin/move-into up
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Right move right
bindsym $mod+Shift+Up move up

bindsym $mod+Return exec alacritty
bindsym $mod+Shift+space focus mode_toggle
bindsym $mod+Tab workspace back_and_forth
bindsym $mod+a [instance="task"] scratchpad show; [instance="task"] move position center
bindsym $mod+c focus child
